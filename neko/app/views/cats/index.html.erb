<p id="notice"><%= notice %></p>
<div id="product_list">
	<h1>Cats</h1>
    <table>
    <% @cats.each do |cat| %>
        <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
  
            <td class="list_description">
                <dl>
                    <dt><%= cat.name %></dt>
                    <dd><%= truncate(strip_tags(cat.description),
                            :length => 80) %></dd>
                </dl>
            </td>
  
            <td class="list_actions">
                <%= link_to 'Show', cat %><br/>
                <%= link_to 'Edit', edit_cat_path(cat) %><br/>
                <%= link_to 'Destroy', cat, 
                    data: { confirm: 'Are you sure?' },
                    :method => :delete %>
            </td>
        </tr>
    <% end %>
    </table>
</div>
 
<br />

