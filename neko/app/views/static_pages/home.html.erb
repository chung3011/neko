<% provide :title, t(".title") %>

<div class="center">
	<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
		<div class="carousel-inner">
			<div class="carousel-item active">
			<img src="https://wtop.com/wp-content/uploads/2015/02/AP277688134469_21.jpg" class="d-block w-100" alt="..." style="height: 300px;object-fit: cover;">
			</div>
			<div class="carousel-item">
			<img src="https://wtop.com/wp-content/uploads/2015/02/AP277688134469_21.jpg" class="d-block w-100" alt="..." style="height: 300px;object-fit: cover;">
			</div>
			<div class="carousel-item">
			<img src="https://wtop.com/wp-content/uploads/2015/02/AP277688134469_21.jpg" class="d-block w-100" alt="..." style="height: 300px;object-fit: cover;">
			</div>
		</div>
		<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>
	<h3 style="margin:30px 0px">Food suggestions</h3>
	<div class="suggestion" style="display:flex; justify-content:space-between">
		<% @foods.each do |food| %>
			<div style="width:30%">
				<% if food.food_images.first %>
					<%= image_tag(food.food_images.first.link, style:"width:90%; height:150px; object-fit:cover") %>
				<% end %>
				<p><%= link_to food.name , detail_food_path(id: food.id) %><p>
				<hr>
			</div>
		<% end %>
	</div>
	<h3 style="margin:30px 0px">Cat suggestions</h3>
	<div class="suggestion" style="display:flex; justify-content:space-between">
		<% @cats.each do |cat| %>
			<div style="width:30%">
				<% if cat.cat_images.first %>
					<%= image_tag(cat.cat_images.first.link, style:"width:90%; height:150px; object-fit:cover") %>
				<% end %>
				<p><%= link_to cat.name , detail_cat_path(id: cat.id) %><p>
				<hr>
			</div>
		<% end %>
	</div>
</div>
